.container {  
  display: flex;
  flex-direction: column;

  .title {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    background-color: #424242;
    color: white;
    font-family: "Times New Roman", Times, serif;
    text-align: center;
    height 80px;
    box-shadow: 0px 7px 12px -2px rgba(0,0,0,0.57);

    nav {
      display: flex;
      flex-direction: row;
      justify-content: space-around;
      width: 50%;

      a {
        cursor: pointer;
        color:white;
        text-decoration: none;
      }
    }
  }

  .mainServers {
    display: flex;
    justify-content: center;
    flex-direction: column;
    background-color: #e0e0e0 ;
  }
}