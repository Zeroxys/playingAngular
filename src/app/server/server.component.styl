.card {
  margin:15px;
  border-radius: 5px;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color:#424242;
  box-shadow: 7px 11px 20px -1px rgba(0,0,0,0.75);
  width: 300px;
  height 480px;
  cursor : pointer;

  .card-content {
    color:white;
    background-color:#616161;
  }

  .thumbnail{
    width: 280px;
  }

}